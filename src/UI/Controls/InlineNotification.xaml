<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="GitHubTools.App.Controls.InlineNotification"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <StackLayout
            x:Name="NotificationContainer"
            Padding="16,8,15,8"
            HorizontalOptions="FillAndExpand">
            <StackLayout
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Spacing="0">
                <Image
                    Source="attention.png"
                    TranslationX="2"
                    VerticalOptions="Center" />
                <Label
                    x:Name="NotificationText"
                    Margin="0"
                    FontSize="12"
                    LineBreakMode="WordWrap"
                    TextColor="#4F4949"
                    VerticalOptions="Center" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>